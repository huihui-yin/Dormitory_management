<view class="noticeform">
   <!-- <view class="maintanIcon">
    <van-icon name="phone-o" size="120px" class="icon"/>
  </view> -->
  <view class='noticeTitle'>
    <van-field
      value="{{ name }}"
      label="标题："
      bindinput='nameInput'
    />
  </view>
  <!-- 公告内容 -->
  <view class='noticeCon'>
  <van-field
    value="{{ content }}"
    type="textarea"
    placeholder="请输入通知内容"
    autosize
    border="{{ false }}"
    bindinput='contentInput'
  />
</view>
<!-- 按钮 -->
  <view class="Submit">
     <button bindtap="Submit" class='btn' type='primary' lang="zh_CN" >
            发布
    </button>
  </view>
</view>