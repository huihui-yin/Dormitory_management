/* pages/bottom_menu/bottom_menu.wxss */

.bottomrow{
  font-family: SimSun;
  background-color: white;
  width: 100%;
  height: 9%;
  bottom: 0rpx;
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottomtab{
  width: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bottomImg{
  margin-top: 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.bottomtabText{
  font-size: 35rpx;
  color: #979797;
}