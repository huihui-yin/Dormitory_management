  <!--加入了寝室-->
<view wx:if="{{dorStatus}}" class="dorContain">
  <view class="dorMain">
    <!-- 寝室信息 -->
    <view class="dorInfo">
      <image class="dorIcon" src="../../images/dor1.png"></image>
      <view>
        {{dor.dorId}}
        {{dor.dorName}}
      </view>
    </view>
    <!-- 对寝室的操作 -->
    <view class="dorOperate">
    <!-- <i-icon type="activity" /> -->
        <i-cell title="寝室资金" is-link url="/pages/finance/finance"></i-cell>
        <i-cell title="寝室卫生安排" is-link url="/pages/clean/clean"></i-cell>
        <i-cell title="寝室报修" is-link url="/pages/maintan/maintan"></i-cell>
        <i-cell title="寝室投票" is-link url="/pages/poll/poll"></i-cell>
        <i-cell title="寝室公告" is-link url="/pages/notice/notice"></i-cell>
    </view>
  </view>
</view>
  <!--没有加入寝室-->
<view  wx:else>
  <!-- 新建寝室 -->
  <view  class="newContain">
    <view class="newMain">
      <image src="../../images/newDor.png" class="newIcon" bindtap="newDor"></image>
      <text newWord>创建一个寝室</text>  
    </view>
   </view>
   <!--搜索寝室  -->
   <view class="searchId">
     <!-- <view class="search-cell">
      <view class="weui-cell__bd">
        <input class="input-search" placeholder=""  value="{{inputVal}}"/>
      </view>
      <view class="weui-cell__ft">
        <button class="btn-search" type="primary" >搜索</button>
      </view>
    </view> -->
    <i-input bind:change="serachId" value="{{ dorIdSearch }}" type="text" right title="查找寝室：" mode="wrapped" placeholder="输入寝室号" maxlength="100"/>
    <view>
      <view wx:if="{{serchRes}}">111</view>
      <view  wx:if="{{noRes}}">222</view>
    </view>
   </view>
</view>
