/* 寝室昵称 ，寝室id ，地址  */
.infoContain{
  background-color: #f6f6f6;
  height: 100vh;
}
.topInfo{
  /* height: 50rpx; */
  width: 100%;
  display: flex;
  justify-content: flex-start;
  padding: 10px 15px;
  background-color: white;

}
.dorImg image{
  height: 40px;
  width: 40px;
  /* margin: 20rpx;   */
}
.dorWord{
  padding: 0 10px;
}
.dorWord .text2{
  font-size: 12px;
  color: #818181;
}
/* 寝室成员 */
.userInfoCon{
  /* height: 300rpx; */
  width: 100%;
  padding: 10px 0;
  background-color: white;
  margin: 5px 0;
}
.userInfoMain{
  display: flex;
  justify-content: flex-start;
}
.uersTitle{
  padding: 0 15px 5px 15px;
}
.oneUser{
  padding: 0 15px;
}
.userInfoMain image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.username{
  font-size: 12px;
  text-align: center;
}
/* 寝室信息详情 */
.infoDetCon{
  /* background-color: white; */
  /* padding: 0 15px; */
  margin-bottom: 5px;
}
.dorName{
  display: flex;
  justify-content:space-between;
  padding: 10px 15px;
  margin: 1px 0;
  background-color: white;

}
.dorName text:nth-child(2){
  font-size: 12px;
  color: #818181;
}
/* 退出寝室 */
.exitDor{
  background-color: white;
  width: 100%;
  text-align: center;
  color: red;
  padding: 10px 0;
  margin: 5px 0;
}
/* 选择寝室位置 */
.newDorSelect{
  /* display: none; */
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 1;
}