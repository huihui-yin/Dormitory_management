<!--个人中心页面-->
<scroll-view class='scbg' scroll-y="true">
  <view class='personalInf'>
    <view class='deco'>
      <open-data class='ava' type="userAvatarUrl"></open-data>
    </view>
    <!-- <open-data class='nn' type="userNickName"></open-data> -->
  </view>
</scroll-view>
<!-- 用户信息 -->
<view class="userInfo">
  <!-- <view class="infoTitle">基本资料</view> -->
  <view class="infoAll">
    <van-cell-group>
      <van-field
        value="{{username}}"
        label="用户名:"
        border="{{ false }}"
        bindinput='nameInput'
        input-align="right"
        />
    </van-cell-group>
    <van-cell-group>
      <van-field
        value="{{tel}}"
        label="手机号:"
        bindinput='telInput'
        border="{{ false }}"
        input-align="right"
        />
    </van-cell-group>
     <!-- <van-cell-group>
      <van-field
        bindinput='briInput'
        value="{{birthday}}"
        label="生日:"
        border="{{ false }}"
        input-align="right"
        />
    </van-cell-group>  -->
  </view>
  <!-- 确认修改 -->
  <view class="Submit">
     <button bindtap="Submit" class='btn' type='primary' lang="zh_CN" >
            确认修改
    </button>
  </view>
</view>
